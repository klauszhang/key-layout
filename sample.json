{
  "title": "arrow keys",
  "rules": [
    {
      "description": "up = w + right_control",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["right_control"]
            },
            "key_code": "w"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "up_arrow"
            }
          ]
        }
      ]
    },
    {
      "description": "up = w + fn",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["fn"]
            },
            "key_code": "w"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "up_arrow"
            }
          ]
        }
      ]
    },
    {
      "description": "down = s + right_control",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["right_control"]
            },
            "key_code": "s"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "down_arrow"
            }
          ]
        }
      ]
    },
    {
